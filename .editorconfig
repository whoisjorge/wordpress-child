root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
max_line_length = 80
trim_trailing_whitespace = true
insert_final_newline = true

[*.{php,htaccess,conf}]
indent_style = space
indent_size = 4
max_line_length = 100

[*.{md,diff}]
trim_trailing_whitespace = false

[*.{csv,txt,svg}]
insert_final_newline = false
