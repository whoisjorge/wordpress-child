{
  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#21759b",
    "titleBar.activeForeground": "#ffffff"
  },

  "editor.rulers": [99],

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  // Exclude files from the file tree
  "files.exclude": {
    "node_modules/": true,
    ".editorconfig": true,
    ".gitattributes": true,
    ".gitignore": true,
    ".prettierignore": true,
    ".prettierrc": true,
    "LICENSE": true,
    "package-lock.json": true,
    "package.json": true,
    "README.md": true,
    "yarn.lock": true
  }
}
