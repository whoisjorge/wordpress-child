{
  "editor.rulers": [99],
  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#7fffd4",
    "titleBar.activeForeground": "#444444"
  },

  /**
   * Editor formatter configuration.
   */

  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[php]": {
    "editor.defaultFormatter": "persoderlind.vscode-phpcbf"
  },

  /**
   * PHP CodeSniffer for Visual Studio Code (phpcs and phpcbf extensions)
   * https://marketplace.visualstudio.com/items?itemName=ikappas.phpcs
   * https://marketplace.visualstudio.com/items?itemName=persoderlind.vscode-phpcbf
   */

  "phpcs.enable": true,
  "phpcs.executablePath": "./vendor/bin/phpcs",
  "phpcs.standard": "WordPress-Core",

  "phpcbf.enable": true,
  "phpcbf.executablePath": "./vendor/bin/phpcbf",
  "phpcbf.standard": "WordPress-Core",

  /**
   * Uncommented are files excluded from the file tree.
   */
  "files.exclude": {
    // "theme.js": true,
    // "composer.json": true,
    // "package.json": true,
    // "README.md": true,

    // ".editorconfig": true,
    // ".gitattributes": true,
    // ".gitignore": true,
    // ".prettierignore": true,
    // ".prettierrc": true,
    // "LICENSE": true

    // "node_modules/": true,
    // "composer.lock": true,
    // "package-lock.json": true,
    // "yarn.lock": true
  }
}
